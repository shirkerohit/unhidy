{
  "manifest_version": 3,
  "name": "Unhidy",
  "version": "1.0",
  "description": "Show/Hide all password fields on a page",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}